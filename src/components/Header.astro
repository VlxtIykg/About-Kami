---
import { ViewTransitions } from "astro:transitions";
import Hambuger from "./Hambuger.astro";
import Navigation from "./Navigation.astro";
import Stars from "./Stars.astro";
import ThemeIcon from "./ThemeIcon.astro";
---
<head>
    <ViewTransitions />
</head>
<nav transition:animate="slide">
  <header>
    <ThemeIcon />
    <Hambuger />
    <Navigation />
  </header>
  <Stars />
</nav>

<style>
  header {
    display: flex;
    align-items: center;
    gap: 10px;
  }
  nav {
    display: flex;
    gap: 10px;
  }

  @media (min-width: 768px) {
    header {
      gap: 20px;
    }
  }
</style>
